.container {
  
} 
.item{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.name{
  flex:1;
  text-align: center;
}
.step{
  width: 120rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.mask{
  position: fixed;
  top:0;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 1;
}