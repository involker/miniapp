page{
 height: 100%;
}
.canvas-container{
  position: relative;
  padding: 15rpx 0;
}
.count{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.getuser{
  display: flex;
  align-items: center;
  margin-top: 50rpx;
}
canvas{
  width: 220rpx;
  height: 220rpx;
  margin: auto;
}
.body{
  overflow: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container {
  overflow: auto;
  height: 100%;
  -webkit-overflow-scrolling: touch;
} 
.tabs{
  /* height: 30rpx; */
  display: flex;
}
.btn{
  flex:1;
  text-align: center;
  padding: 15rpx 0;
  color: #1aad19;
  border: 1rpx solid #1aad19;
  display: flex;
  justify-content: center;
  align-items: center;
}
.active{
  background: #1aad19;
  color: #fff;
}
.tips{
  text-align: center;
  font-size: 24rpx;
  padding: 20rpx;
}
.item{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.name{
  flex:1;
  text-align: center;
}
.step{
  width: 120rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.mask{
  position: fixed;
  top:0;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 1;
}