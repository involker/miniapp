page{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.body{
  flex:1;
  overflow: hidden;
}
.container {
  overflow: auto;
  height: 100%;
  -webkit-overflow-scrolling: touch;
} 
.footer{
  /* height: 30rpx; */
  display: flex;
}
.btn{
  flex:1;
  text-align: center;
  padding: 10rpx 0;
  color: #1aad19;
  border: 1rpx solid #1aad19;
  
}
.active{
  background: #1aad19;
  color: #fff;
}
.item{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.name{
  flex:1;
  text-align: center;
}
.step{
  width: 120rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.mask{
  position: fixed;
  top:0;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 1;
}